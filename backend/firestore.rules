rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read and write to their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // You can add other rules for other collections here
    // For example, to allow any authenticated user to read a 'public' collection:
    // match /public/{docId} {
    //   allow read: if request.auth != null;
    // }

    // Rules for the policies collection
    match /policies/{policyId} {
      allow create: if request.auth != null;
      // Allow read only if the user is the creator
      allow read: if request.auth != null && resource.data.creatorId == request.auth.uid;
      // Allow update only on the 'valid' field by the creator
      allow update: if request.auth != null && resource.data.creatorId == request.auth.uid
                    && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['valid']);
      allow delete: if false; // Nobody can delete for now
    }
  }
}
